@model Artist;

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h4>Product</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img alt="Artist's Logo" src="@Model.LogoUrl" width="100"/>
        </dd>
    </dl>

    <form method="post" asp-controller="Artists" asp-action="DeleteAction">
        <input type="hidden" asp-for="Id"/>
        <button class="btn btn-danger" type="submit">
            Delete
        </button>

        <a asp-controller="Artists" asp-action="Index" class="btn btn-secondary">
            Back
        </a>
    </form>
</div>