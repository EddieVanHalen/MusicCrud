@model List<Album>;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<h1>Albums</h1>

@await Html.PartialAsync("_AlertPartialView")

<div class="container p-4">
    <h2 class="text-center mb-5">Featured Albums</h2>

    <div class="row">
        @foreach (Album album in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-4">
                <div class="card h-100">
                    <img src="@album.ImageUrl"
                         class="card-img-top"
                         alt="Album Cover">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@album.Title</h5>
                        <div class="mt-auto">
                            <a asp-controller="Albums" asp-action="Details" asp-route-id="@album.Id" class="btn btn-primary w-100">Details...</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>