@using WebApplication1.DTOs.ForView
@model AlbumDTO

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

@await Html.PartialAsync("_AlertPartialView")

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img alt="Album's Logo" width="250" src="@Model.ImageUrl" />
        </dd>
    </dl>
</div>

<div>
    <a asp-controller="Albums" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-controller="Albums" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
</div>
