@using WebApplication1.DTOs.ForView
@model AlbumDTO

@{
    ViewData["Title"] = "Update";
    Layout = "_Layout";
}


<h1 class="text-center">Update Album</h1>

@await Html.PartialAsync("_AlertPartialView")

<form method="post" asp-controller="Albums" asp-action="UpdateAction">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label style="cursor:pointer;" asp-for="Title"></label>
        <input type="text" class="form-control my-2" asp-for="Title">
        <span style="color:red" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label style="cursor:pointer;" asp-for="Artist"></label>
        <input type="text" class="form-control my-2" asp-for="Artist">
        <span style="color:red" asp-validation-for="Artist"></span>
    </div>

    <div class="form-group">
        <label style="cursor:pointer;" asp-for="ImageUrl"></label>
        <input type="text" class="form-control my-2" asp-for="ImageUrl">
        <span style="color:red" asp-validation-for="ImageUrl"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
