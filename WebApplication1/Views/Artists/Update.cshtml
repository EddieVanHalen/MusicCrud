@model Artist;

@{
    ViewData["Title"] = "Update Artist";
    Layout = "_Layout";
}

<h1>Update Artist</h1>

@await Html.PartialAsync("_AlertPartialView")

<form method="post" asp-controller="Artists" asp-action="UpdateAction">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label style="cursor:pointer;" asp-for="Name"></label>
        <input type="text" class="form-control my-2" asp-for="Name">
        <span style="color:red" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label style="cursor:pointer;" asp-for="LogoUrl"></label>
        <input type="text" class="form-control my-2" asp-for="LogoUrl">
        <span style="color:red" asp-validation-for="LogoUrl"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
