@model Artist

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}


<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img alt="Artist's Logo" width="250" src="@Model.LogoUrl" />
        </dd>
    </dl>
</div>

<div>
    <a asp-controller="Artists" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-controller="Artists" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
</div>
