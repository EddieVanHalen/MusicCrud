@using WebApplication1.Models.Models
@model List<Artist>;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<h1>Artists</h1>

@await Html.PartialAsync("_AlertPartialView")

<div class="container p-4">
    <h2 class="text-center mb-5">Featured Albums</h2>

    <div class="row">
        @foreach (Artist artist in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-4">
                <div class="card h-100">
                    <img src="@artist.LogoUrl"
                         class="card-img-top"
                         alt="Album Cover">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@artist.Name</h5>
                        <div class="mt-auto">
                            <a asp-controller="Artists" asp-action="Details" asp-route-id="@artist.Id" class="btn btn-primary w-100">Details...</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>