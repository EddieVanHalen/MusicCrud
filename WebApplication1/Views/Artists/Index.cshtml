@using WebApplication1.Models.Models
@model List<Artist>;

@{
    ViewData["Title"] = "Home Page";
}

<h1>Artists</h1>

<div class="container-fluid p-4">
    <h2 class="text-center mb-5 display-4">Featured Artists</h2>

    @foreach (Artist artist in @Model)
    {
        <div class="row g-4">
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card album-card shadow-lg h-100">
                    <img src="@artist.LogoUrl" class="card-img-top album-cover" alt="Artist's Logo">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@artist.Name</h5>
                    </div>
                    <a asp-controller="Artists" asp-action="Details" asp-route-id="@artist.Id" class="btn btn-primary">Details...</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .album-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 15px;
        overflow: hidden;
    }

    .album-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .album-cover {
        height: 300px;
        object-fit: cover;
        border-radius: 15px 15px 0 0;
    }

    .card-body {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .btn-primary {
        background-color: #6c5ce7;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #5b4bc4;
    }
</style>
